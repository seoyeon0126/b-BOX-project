<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/bbox" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:backgroundTint="#4B4B4B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/rec_coding"
            android:textColor="@color/white"
            android:fontFamily="@font/dunggeunmo"
            android:padding="20sp"
            android:text="블랙박스 녹화 시작"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button2"
            android:backgroundTint="#4B4B4B"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/list_coding"
            android:textColor="@color/white"
            android:fontFamily="@font/dunggeunmo"
            android:padding="25sp"
            android:text="블랙박스 저장 목록"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button3"
            android:backgroundTint="#4B4B4B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/setting_coding"
            android:textColor="@color/white"
            android:fontFamily="@font/dunggeunmo"
            android:padding="25sp"
            android:text="블랙박스 환경 설정"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>